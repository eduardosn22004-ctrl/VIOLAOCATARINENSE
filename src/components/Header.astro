---
const navItems = [
    { linkText: 'Apresentação', href: '/apresentacao' },
    { linkText: 'Catálogo', href: '/catalogo' },
    { linkText: 'Compositores/Violonistas', href: '/compositores' },
    { linkText: 'Discografia', href: '/discografia' },
    { linkText: 'Referências', href: '/referencias' },
    { linkText: 'Registros Históricos', href: '/registros' },
    { linkText: 'Participe Conosco', href: '/participe' }
];
---

<nav class="flex flex-col sm:flex-row items-center justify-between gap-6 pt-6 pb-16 sm:pt-12 sm:pb-24">
    
    <a href="/" class="block shrink-0 -mt-8">
        <img 
            src="/images/logo.png" 
            alt="Violão Catarinense" 
            class="h-20 w-auto object-contain" 
        />
    </a>

    {
        !!navItems?.length && (
            <ul class="flex flex-wrap justify-center sm:justify-end gap-x-4 gap-y-2">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2 hover:text-gray-600 transition-colors">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
